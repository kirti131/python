#Factorial of a number using recursion
#define n
def recur_factorial(n):
   if n == 0:
       return n
   else:
       return n*recur_factorial(n-1)

num = int(input("num"))

#  negative number
if num < 0:
   print("factorial not exist")
elif num == 0:
   print("The factorial of 0 is 1")
else:
   print("The factorial of", num, "is", recur_factorial(num))
